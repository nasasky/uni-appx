.products-box{
  display: flex;
  justify-content:space-between;
  margin:0 20rpx 20rpx 20rpx;
  flex-wrap: wrap;
}

.products-item{
  height: 375rpx;
  width: 49%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #F5F6F5;
}

.products-image{
  margin: 10rpx auto 0 auto;
  width:80%;
  height:220rpx;
  border-radius: 10rpx;
}

.products-item-bottom{
  text-align: center;
  margin-bottom:20rpx;
  color: #333;
}

.products-item-bottom .name{
  font-size: 28rpx;
}
.products-item-bottom .price{
  font-size: 24rpx;
}