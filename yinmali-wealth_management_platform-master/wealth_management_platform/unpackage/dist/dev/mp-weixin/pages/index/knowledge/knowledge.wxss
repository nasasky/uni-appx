@import "../../../common/vendor.wxss";

.tiaojian {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  background: #FFFFFF;
  height: 70rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
  -webkit-justify-content: space-around;
  justify-content: space-around;
}
.tiaojian view {
  line-height: 70rpx;
  color: rgba(153, 153, 153, 1);
}
.tiaojian .active {
  border-bottom: 3px solid #c49c5a;
  color: rgba(196, 156, 90, 1);
}
.questions {
  background: #fff;
  padding: 20rpx 30rpx;
}
.question-item {
  border-bottom: 1px solid rgba(238, 238, 238, 1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  padding: 20rpx 0;
}
.question-item-top,
.question-item-bot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.question-item-top {
  margin-bottom: 20rpx;
}
.question-item-bot {
  color: #cdcdcd;
}
.time,
.more-req {
  line-height: 40rpx;
  color: rgba(153, 153, 153, 1);
}
.ques {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 36rpx;
  color: rgba(51, 51, 51, 1);
}
.req {
  border-radius: 10rpx;
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  margin-left: 60rpx;
  border-radius: 25px;
  color: #cb9359;
  font-size: 11px;
  border: 1px solid rgba(196, 156, 90, 1);
}
.questionBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
  position: fixed;
  bottom: 34rpx;
}
.question {
  width: 240rpx;
  height: 70rpx;
  background: -webkit-linear-gradient(right, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  background: linear-gradient(-90deg, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  border-radius: 35px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  color: rgb(255,255,255);
}
._label {
  margin-right: 10rpx;
}