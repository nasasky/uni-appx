@import "../../../../common/vendor.wxss";

page {
  background: rgb(255,255,255);
}
.color-gray {
  background: #f5f5f5;
  padding-top: 20rpx;
}
.box {
  background: rgb(255,255,255);
  padding: 0 30rpx;
}
.quesBox {
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(238, 238, 238, 1);
}
.mark,
.mark-top-left,
.mark-right .mark-bot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.mark-top-left,
.mark-right .mark-bot {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.avator-left,
.avator-left image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.mark-right {
  margin-left: 19rpx;
}
.position,
.name {
  margin-right: 10rpx;
}
.mark-top {
  font-size: 16px;
  line-height: 42rpx;
  font-weight: bold;
  color: rgba(196, 156, 90, 1);
}
.mark-bot {
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 48rpx;
  font-size: 12px;
}
.repBox {
  padding: 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  border-bottom: 1px solid rgba(238, 238, 238, 1);
}
.repLeft {
  padding: 0 20rpx 0 42rpx;
}
.repRignt {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.repRTop {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  font-weight: bold;
  color: rgba(51,51,51,1);
  line-height: 44rpx;
}
.time {
  font-weight: 500;
  color: rgba(153,153,153,1);
  font-size: 12px;
  line-height: 29rpx;
}
.repRBot {
  font-weight: 500;
  color: rgba(51,51,51,1);
  line-height: 42rpx;
}
.questionBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  padding: 40rpx 0;
  text-align: center;
}
.question {
  width: 240rpx;
  height: 70rpx;
  background: -webkit-linear-gradient(right, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  background: linear-gradient(-90deg, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  border-radius: 35px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  color: rgb(255,255,255);
}
._label {
  margin-right: 10rpx;
}