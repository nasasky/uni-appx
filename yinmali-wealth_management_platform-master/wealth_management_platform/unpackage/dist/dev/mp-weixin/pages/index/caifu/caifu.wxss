@import "../../../common/vendor.wxss";

.box {
  padding: 30rpx 30rpx 0;
}
.cfjiangtang {
  height: 350rpx;
  width: 100%;
  margin-bottom: 30rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 16rpx;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
  color: white;
}
.play {
  color: #666666;
  font-size: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -40rpx;
  margin-left: -40rpx;
  opacity: 0.8;
}
.title {
  position: absolute;
  bottom: 60rpx;
  left: 20rpx;
  font-size: 15px;
}
.bot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  position: absolute;
  bottom: 22rpx;
  left: 20rpx;
  font-size: 11px;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  width: 90%;
}
.left,
.right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.right {
  color: rgba(196,156,90,1);
  font-size: 24rpx;
  font-weight: 500;
}