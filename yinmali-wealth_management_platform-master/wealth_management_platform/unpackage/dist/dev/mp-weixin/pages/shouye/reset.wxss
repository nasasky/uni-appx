@import "../../common/vendor.wxss";

.topBox {
  width: 100%;
  background: url("http://ai.ylcaifu.com/appimg/images/7.0-%E7%99%BB%E5%BD%95%E8%AE%A4%E8%AF%81%E7%AD%89%E9%A1%B5%E9%9D%A2/7.1.3-%E5%AF%86%E7%A0%81%E9%87%8D%E7%BD%AE/android/drawable-xhdpi/beijing.png") no-repeat;
  background-size: 100% 370rpx;
}
.top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 67rpx 30rpx 37rpx 37rpx;
  color: rgb(255, 255, 255);
}
.middle {
  font-size: 18px;
}
.go-back {
  font-size: 17px;
}
.section {
  height: 679rpx;
  box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  margin: 0 30rpx;
  background: rgba(255, 255, 255, 1);
}
.input-group {
  padding: 36rpx 30rpx;
}
.inp-box {
  height: 94rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1px solid rgba(204, 204, 204, 0.5);
}
.icon {
  width: 30rpx;
  height: 38rpx;
  padding: 0 20rpx;
}
.input {
  text-align: left;
  width: 340rpx;
}
.get-number {
  height: 40rpx;
  border: 1px solid rgba(196, 156, 90, 1);
  font-size: 12px;
  line-height: 40rpx;
  border-radius: 10px;
  color: rgba(196, 156, 90, 1);
  padding: 0 20rpx;
}
.button-box {
  height: 88rpx;
  background: -webkit-linear-gradient(right,rgba(196,156,90,1) 0%,rgba(226,196,138,1) 100%);
  background: linear-gradient(-90deg,rgba(196,156,90,1) 0%,rgba(226,196,138,1) 100%);
  border-radius: 22px;
  margin: 40rpx 50rpx;
}
.btn {
  text-align: center;
  line-height: 88rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  font-size: 17px;
  margin-top: 30rpx;
}