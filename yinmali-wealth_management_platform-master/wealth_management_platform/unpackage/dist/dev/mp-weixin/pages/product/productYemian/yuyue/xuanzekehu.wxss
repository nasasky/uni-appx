@import "../../../../common/vendor.wxss";

.page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
}
.scrollList {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.uni-list-cell:after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 0.5px;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background: rgba(244,245,249,1);
}
.uni-list-cell-divider {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 40rpx;
  background: rgba(249, 249, 249, 1);
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  font-size: 15px;
}
.uni-indexed-list-bar {
  width: 46rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  position: absolute;
  right: 0;
}
.uni-indexed-list-bar.active {
  background-color: rgb(200, 200, 200);
}
.uni-indexed-list-text {
  color: #CB9359;
  font-size: 22rpx;
  text-align: center;
}
.uni-indexed-list-bar.active .uni-indexed-list-text {
  background-color: rgb(255, 255, 255);
}
.uni-indexed-list-text.active,
.uni-indexed-list-bar.active .uni-indexed-list-text.active {
  background-color: rgb(255, 255, 255);
}
.uni-indexed-list-alert {
  position: absolute;
  z-index: 20;
  width: 160rpx;
  height: 160rpx;
  left: 50%;
  top: 50%;
  margin-left: -80rpx;
  margin-top: -80rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 70rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}
.uni-list-cell-image {
  height: 76rpx;
  width: 76rpx;
  margin-left: 28rpx;
}
.uni-list-cell-navigate {
  padding: 40rpx 30rpx;
}