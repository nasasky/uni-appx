@import "../../../../common/vendor.wxss";

page {
  background: rgb(255,255,255);
}
.box {
  background: #f5f5f5;
  padding-top: 20rpx;
}
.form-group {
  background: rgb(255,255,255);
  font-size: 15px;
  padding: 40rpx 30rpx;
}
.row1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.radio {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-weight: 500;
  margin-left: 40rpx;
}
.radio image {
  height: 16px;
  width: 16px;
  margin-right: 10rpx;
}
.row {
  height: 98rpx;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.row .name-inp {
  width: 100%;
}
.row .title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: rgba(51,51,51,1);
}
.row ._select {
  border: none;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
  color: rgba(153,153,153,1);
  font-size: 14px;
  height: 100%;
}
.row ._select ._option {
  color: rgba(153,153,153,1);
  font-size: 14px;
}
.questionBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  padding: 40rpx 0;
  text-align: center;
}
.question {
  width: 240rpx;
  height: 70rpx;
  background: -webkit-linear-gradient(right, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  background: linear-gradient(-90deg, rgba(196, 156, 90, 1) 0%, rgba(226, 196, 138, 1) 100%);
  border-radius: 35px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  color: rgb(255,255,255);
}
.label {
  margin-right: 10rpx;
}