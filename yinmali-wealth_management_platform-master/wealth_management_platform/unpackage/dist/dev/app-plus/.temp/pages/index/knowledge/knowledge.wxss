@import "../../../common/vendor.wxss";

.tiaojian {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  background: #FFFFFF;
  height: 80rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-bottom: 20rpx;
  text-align: center;
}
.tiaojian view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 80rpx;
  border-right: 1px solid #D9D9D9;
}
.active {
  background: rgba(200,166,91,0.9);
  color: #fff;
}